		animate(".mangeelementer3", { x: [800, 0], y: [50, 0] }, { duration: 2.5 });

		return () => {
			animate(".mangeelementer1", { x: [-1000, 0], y: [-50, 0] }, { duration: 1 });
			animate(".mangeelementer2", { x: [-800, 0], y: [-100, 0] }, { duration: 2 });
			animate(".mangeelementer3", { x: [800, 0], y: [50, 0] }, { duration: 2.5 });
		};
	});

	inView("p.fade-in", ({ target }) => {
		// Start the fade-in animation when the paragraph enters view
		animate(target, 
			{
				opacity: [0, 0, 1], // Stay at 0 for the first 2 seconds, then go to 1
			}, 
			{
				duration: 2.5, // Total duration
				easing: "ease-in-out",
				timeline: [
					{ time: 0, value: 0 },     // 0 seconds: opacity 0
					{ time: 2, value: 0 },     // 2 seconds: opacity still 0
					{ time: 2.5, value: 1 }    // 2.5 seconds: opacity 1
				]
			}
		);

		return () => {
			// Reset the opacity when leaving view
			animate(target, { opacity: 0 }, { duration: 1.5, easing: "ease-in-out" });
		};
	});

</script>

