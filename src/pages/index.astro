---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import Arbejde from '../components/Arbejde.astro';
---
<MainLayout title="Titel">
	<Button variant="primary" size="small">plastic change</Button>
	<Button variant="secondary" size="large">plastic change</Button>
	<section></section>
	<article class="max-w-screen-xl mx-auto px-4">
		
		<section id="videoonhover" x-data class="max-w-4xl mx-auto mt-32">
			<video width="1280" height="960" x-ref="hovervideo" @mouseenter="$refs.hovervideo.play()" @mouseleave="$refs.hovervideo.pause()" poster="/image.png">
				<source src="pierre-falcke-video.mp4" type="video/mp4">
				<source src="pierre-falcke-video.webm" type="video/webm">
			</video>
		</section>

		<section class="grid grid-cols-2">
			<div>
				<h2 class="text-7xl">What we want</h2>
				<p class="w-40">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Maiores, minima ut ab iure suscipit odit non dolore aperiam voluptatem, quas laboriosam accusantium, voluptatibus ipsa ipsum. Voluptates modi alias maxime voluptatem.</p>
				<img src="pc_logo.svg" alt="bitmap" class="w-64">
			</div>
			<div>
				<!-- Video on hover instead of the image. poster="image.png">??? -->
				<section id="videoonhover" x-data class="max-w-4xl mx-auto mt-32">
					<video width="1280" height="960" x-ref="hovervideo" 
						   @mouseenter="$refs.hovervideo.play()" 
						   @mouseleave="$refs.hovervideo.pause()" 
						   poster="">
						<source src="pcvideo.mp4" type="video/mp4">
					</video>
				</section>
			</div>
		</section>
		
		<section class="grid grid-cols-3 gap-12">
	<div><img src="/image.png" alt=""><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ea cumque sed voluptatem qui accusamus similique ullam quibusdam </p></div>
	<div><img src="/image.png" alt=""><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ea cumque sed voluptatem qui accusamus similique ullam quibusdam </p></div>
	<div><img src="/image.png" alt=""><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ea cumque sed voluptatem qui accusamus similique ullam quibusdam </p></div>
		</section>
		<section>
			<h2>Våres arbejde</h2>
			<Arbejde class="border-b-2 border-black" caption="Mod et affaldsfrit samfund" image="image.png" bio="I 2017 blev der produceret svimlende 322 millioner tons plastik på verdensplan, og produktionen af plastik forventes at firedobles inden 2050. Samtidig vil det udledte plastikaffald til havmiljøet fordobles inden 2030. Knap 40% af den plastik, der produceres, er plastik til fødevareemballage. En stor andel heraf er engangsplastik - det vil sige plastik, der ikke kan genbruges eller genanvendes. Dens skæbne består enten af afbrænding, ophobes på åbne lossepladser, eller i værste tilfælde ender som plastikforurening i verdenshavene. Plastic Change er blandt andet sat i søen for at forhindre, at noget af dette sker." />
			<Arbejde class="border-b-2 border-black" caption="Section 1" image="image.png" bio="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
		</section>
		<section>
			<div class="overflow-clip"></div>
			<h2>Sådan opstod miljøorganisationen Plastic Change</h2>
				<section id="horisontalscrollsection" class="h-[400vw]">
					<ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
					<li class="pl-0 flex w-[100vw] items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row w-[1200px]"><img src="/image.png" alt="" class="w-2/3"/><figcaption class="pl-4 italic w-1/3">Pierre Falcke, selvportræt</figcaption></figure></li>
