---
// Få adgang til `variant`, `size`, og `href` fra props
const { variant = "primary", size = "medium", href } = Astro.props;

// Definér knap-styling
const buttonStyling = "py-4 px-4 rounded-md  border-2 md transition ease-in-out";
const variantClasses = {
  secondary: "text-white font-semibold  bg-cerice_ text-poppins  border-cerice_ hover:bg-white hover:text-cerice_",
  primary: "text-white font-semibold text-poppins tracking-tight border-graphite_light bg-graphite_light hover:bg-white hover:text-graphite_light",
   heart: `
    text-white font-semibold text-poppins border-none 
    bg-[url('/heart.svg')] bg-cover bg-center
    hover:hover:bg-[url('/heart-white.svg')] hover:text-cerice_ h-20 w-24`,
};
const sizeClasses = {
  large: "text-4xl",
  medium: "text-2xl",
  small: "text-m",
};
---

<div>
  {
    href ? (
      <a href={href} class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
        <slot />
      </a>
    ) : (
      <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
        <slot />
      </button>
    )
  }
</div>

