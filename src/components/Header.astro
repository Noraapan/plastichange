---
import Button from '../components/Button.astro';
---
<div x-data="{ showmenu: false }" class="p-4 fixed top-0 w-full z-20">
    <div id="navbar" class="flex flex-row justify-between">
        <div id="logo">
            <a href="/">
                <img src="/logo.svg" alt="logo" class="hover:opacity-75" />
            </a>
        </div>
        <Button variant="secondary" size="small">støt</Button>
        <button id="burgermenu" class="pt-5 pr-4 text-s py-4 px-4 rounded-md border-2 transition ease-in-out text-white font-semibold text-poppins tracking-tight border-graphite_light bg-graphite_light hover:bg-white hover:text-graphite_light m:text-m" x-on:click="showmenu = !showmenu"> 
            Menu
        </button>
    </div>
        <nav id="mobilmenu" class="fixed right-8 flex flex-col content-center pt-2" 
            x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
            <ul class="space-y-2 pt-5 pr-4 text-s py-4 px-4 rounded-md  border-2 text-white font-semibold text-poppins tracking-tight border-graphite_light bg-graphite_light hover:bg-white hover:text-graphite_light">
                <li class="hover:opacity-75"><a href="#pierre">Pierre Falcke</a></li>
                <li class="hover:opacity-75"><a href="#hvaderstockfotos">Om stock-fotos</a></li>
                <li class="hover:opacity-75"><a href="#pierresberoemmelse">Pierres berømmelse</a></li>
                <li class="hover:opacity-75"><a href="#enskillevej">En skillevej</a></li>
                <li class="hover:opacity-75"><a href="#fotoeksperimenter">Fotoeksperimenter</a></li>
                <li class="hover:opacity-75"><a href="#nybegyndelse">Ny begyndelse</a></li>
                <li class="hover:opacity-75"><a href="#galleri">Galleri</a></li>
            </ul>
        </nav>
</div>
<script src="https://cdn.jsdelivr.net/npm/alpinejs" defer></script>
